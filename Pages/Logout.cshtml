@page
@model WebApplication1.Pages.LogoutModel
@{
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3>Logout Confirmation</h3>
        </div>
        <div class="card-body">
            <p>Are you sure you want to logout?</p>
            <form method="post">
                <button type="submit" asp-page-handler="Logout" class="btn btn-primary">Yes, Logout</button>
                <button type="submit" asp-page-handler="DontLogout" class="btn btn-secondary">No, Stay</button>
            </form>
        </div>
    </div>
</div>