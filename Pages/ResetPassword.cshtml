@page
@model WebApplication1.Pages.ResetPasswordModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h3>Reset Password</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input type="hidden" asp-for="RPModel.Token" />
                        <input type="hidden" asp-for="RPModel.Email" />

                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <input asp-for="RPModel.Password" class="form-control" />
                            <span asp-validation-for="RPModel.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Confirm New Password</label>
                            <input asp-for="RPModel.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="RPModel.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>