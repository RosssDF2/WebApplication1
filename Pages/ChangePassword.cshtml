@page
@model WebApplication1.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white p-4">
                    <h3 class="fw-bold mb-0">
                        <i class="bi bi-shield-lock-fill me-2"></i>Change Password
                    </h3>
                    <p class="mb-0 text-white-50 small">Secure your account with a new strong password.</p>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        @if (!ModelState.IsValid)
                        {
                            <div class="alert alert-danger shadow-sm border-0 mb-4">
                                <div asp-validation-summary="All" class="mb-0"></div>
                            </div>
                        }

                        <div class="form-floating mb-3">
                            <input asp-for="CPModel.CurrentPassword" class="form-control bg-light" placeholder="Current Password" />
                            <label class="text-muted">Current Password</label>
                            <span asp-validation-for="CPModel.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="CPModel.NewPassword" class="form-control bg-light" placeholder="New Password" />
                            <label class="text-muted">New Password</label>
                            <span asp-validation-for="CPModel.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="CPModel.ConfirmNewPassword" class="form-control bg-light" placeholder="Confirm Password" />
                            <label class="text-muted">Confirm New Password</label>
                            <span asp-validation-for="CPModel.ConfirmNewPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm fw-bold">
                                <i class="bi bi-check-circle-fill me-2"></i>Update Password
                            </button>
                            <a asp-page="/Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>